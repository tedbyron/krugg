{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "platforms": ["macOS", "windows"],
  "permissions": [
    "core:default",
    "autostart:default",
    "global-shortcut:default",
    "http:default",
    "lcu:default",
    "opener:default",
    "positioner:default",
    "shell:default",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "wmic",
          "cmd": "WMIC.exe",
          "args": ["process", "WHERE", "Name='LeagueClientUx.exe'", "GET", "CommandLine"]
        },
        {
          "name": "ps",
          "cmd": "ps",
          "args": ["-xo", "args="]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "grep",
          "cmd": "grep",
          "args": ["LeagueClientUx"]
        }
      ]
    },
    {
      "identifier": "shell:allow-stdin-write",
      "allow": [
        {
          "name": "grep",
          "cmd": "grep",
          "args": ["LeagueClientUx"]
        }
      ]
    },
    "store:default"
  ]
}
