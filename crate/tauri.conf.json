{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "league-thingy",
  "version": "0.1.0",
  "identifier": "com.league-thingy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "league-thingy",
        "width": 800,
        "height": 600,
        "backgroundColor": null,
        "backgroundThrottling": "suspend",
        "devtools": true,
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: data: blob: filesystem:"
      }
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Â© Copyright 2025 Teddy Byron",
    "targets": ["app", "dmg", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
